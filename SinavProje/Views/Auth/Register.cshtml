@model SinavProje.Models.ErrorViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login-form.css">
</head>
<body>
<style>
    #login .container #login-row #login-column #login-box {
        height: 500px;
    }
</style>
<div id="login">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" method="post" action="/Auth/Register">
                        <h3 class="text-center text-info">Kayıt Formu</h3>
                        <div class="form-group">
                            <label for="username" class="text-info">Kullanıcı Adı* :</label><br>
                            <input type="text" name="username" id="username" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="name" class="text-info">İsim* :</label><br>
                            <input type="text" name="name" id="name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="email" class="text-info">Email* :</label><br>
                            <input type="email" name="email" id="email" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Parola* :</label><br>
                            <input type="password" name="password" id="password" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <br>
                            <p>@{
                                   if (Model!=null)
                                   {
                                       @Model.Error
                                   }
                               }</p>
                            <input type="submit" name="submit" class="btn btn-info btn-md" value="Kayıt Ol">
                        </div>
                        <div id="register-link" class="text-right">
                            <br/>
                            <a href="/" class="text-info">Giriş yap</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
