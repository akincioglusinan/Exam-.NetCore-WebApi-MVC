@model List<SinavProje.Entities.Concrete.Entities.Exam>;

@{
    ViewData["Title"] = "Exams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Exams</h1>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col">
            
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Date</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody>
                @{
                    int i = 1;
                    foreach (var exam in Model)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td><a href="/@exam.Id/@exam.Title.Replace(" ","-").Replace(".", "dot")">@exam.Title</a></td>
                            <td>@exam.DateTime</td>
                            <td><a href="/removeexam/@exam.Id"class="btn btn-danger btn-sm"> X </a></td>
                        </tr>
                        i++;
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
